<Window
    x:Class="PartisanNET.App.Wpf.Views.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:constants="clr-namespace:PartisanNET.App.Wpf.Constants"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:regions="http://prismlibrary.com/"
    Title="MainWindow"
    Width="800"
    Height="450"
    regions:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Height="30"
            Command="{Binding Navigate}"
            Content="Navigate" />
        <ContentControl Grid.Row="1" regions:RegionManager.RegionName="{x:Static constants:Regions.MainRegion}" />
    </Grid>
</Window>
